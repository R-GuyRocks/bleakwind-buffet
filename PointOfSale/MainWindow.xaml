<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="MainWindow" Height="539" Width="765" MaxHeight="539" MaxWidth="765">
    <DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            <local:MenuSelection x:Name="menuSelection" Grid.Column="0" VerticalAlignment="Top" Grid.ColumnSpan="2" Loaded="MenuSelection_Loaded"/>
            <Border x:Name="orderBorder" Grid.Column="2"/>
        </Grid>
    </DockPanel>
</Window>
